<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_size55"
    android:background="@color/app_color_login_blue"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="@dimen/app_size30"
        android:layout_height="@dimen/app_size30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_size10"
        android:src="@drawable/icon_arrow_left_white" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_size16"
        android:text="@string/submit"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_txt_size18"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/feedback"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_txt_size18" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_size16"
        android:text="@string/submit"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_txt_size18" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/app_size30"
        android:layout_height="@dimen/app_size30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_size16"
        android:src="@drawable/information"
        android:visibility="gone" />
</RelativeLayout>
