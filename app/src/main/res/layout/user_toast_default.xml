<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--这里故意多嵌套一层LinearLayout，为了在解析时确定布局的大小-->
    <LinearLayout
        android:layout_width="@dimen/app_size160"
        android:layout_height="@dimen/app_size120"
        android:background="@drawable/bg_user_toast"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/app_size30"
            android:layout_height="@dimen/app_size30"
            android:layout_marginTop="@dimen/app_size20"
            android:src="@drawable/icon_selected_white" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size25"
            android:text="请稍后再试"
            android:textColor="@color/app_color_white"
            android:textSize="@dimen/app_txt_size18" />
    </LinearLayout>
</LinearLayout>
