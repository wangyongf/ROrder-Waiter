<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_white">

    <LinearLayout
        android:id="@+id/ll_left_text_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/app_size12"
        android:layout_marginTop="@dimen/app_size12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left_icon"
                android:layout_width="@dimen/app_size22"
                android:layout_height="@dimen/app_size22"
                android:layout_marginLeft="@dimen/app_size13"
                android:src="@drawable/setting" />

            <TextView
                android:id="@+id/tv_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_size13"
                android:text="@string/setting"
                android:textColor="@color/app_color_black"
                android:textSize="@dimen/app_txt_size18" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_left_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_size13"
            android:layout_marginTop="@dimen/app_size5"
            android:text="开关打开"
            android:textColor="@color/app_color_gray"
            android:textSize="@dimen/app_txt_size15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_text_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_size12"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="大鱼海棠"
            android:textColor="@color/app_color_gray"
            android:textSize="@dimen/app_txt_size15" />

        <ImageView
            android:id="@+id/iv_right_icon"
            android:layout_width="@dimen/app_size22"
            android:layout_height="@dimen/app_size22"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_size5"
            android:src="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_size10"
        android:orientation="vertical">

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_button"
            style="@style/SwitchButtonStyle"
            android:layout_gravity="center"
            app:kswBackDrawable="@drawable/miui_back_drawable"
            app:kswThumbDrawable="@drawable/miui_thumb_drawable"
            app:kswBackMeasureRatio="2"
            app:kswThumbHeight="@dimen/app_size20"
            app:kswThumbWidth="@dimen/app_size20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
